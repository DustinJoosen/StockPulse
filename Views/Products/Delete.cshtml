@model StockPulse.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h3 class="mt-5">Are you sure you want to delete this product?</h3>

<div class="row">
    <hr />
    <dl class="row col-8">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        @if (Model.Description != null && !String.IsNullOrWhiteSpace(Model.Description))
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
        }
         <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalStock)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalStock)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PurchasePrice)
        </dt>
        <dd class = "col-sm-10">
            €@Html.DisplayFor(model => model.PurchasePrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SellingPrice)
        </dt>
        <dd class = "col-sm-10">
            €@Html.DisplayFor(model => model.SellingPrice)
        </dd>
    </dl>
    <hr/>

    <h5>With it's stock?</h5>
    <table class="stock-table table table-bordered table-striped product-stock-product-table display-block">
        <tr>
            <th>Warehouse</th>
            <th>Quantity</th>
        </tr>
        @foreach (var stock in Model.ProductStocks) {
            <tr>
                <td>@stock.Warehouse.City</td>
                <td>@stock.Quantity</td>
            </tr>
        }
    </table>

    <hr/>
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProductNum" />
        <input type="submit" value="Delete" class="back-btn" id="save-btn-but-red" />
        <a class="save-btn" asp-action="Index">Back</a>      
    </form>
</div>
