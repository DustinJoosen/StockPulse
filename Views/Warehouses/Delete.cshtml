@model StockPulse.Models.Warehouse

@{
    ViewData["Title"] = "Delete Warehouse";
}

<h3 class="mt-5">Are you sure you want to delete this warehouse?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Street)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Street)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ZipCode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ZipCode)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Manager)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Manager.PersonEmail)
        </dd>
    </dl>
    
    <hr/>
    <h5>With it's stock?</h5>
    <table class="stock-table table table-bordered table-striped product-stock-warehouse-table display-block">
        <tr>
            <th>Product</th>
            <th>Quantity</th>
        </tr>
        @foreach (var stock in Model.ProductStocks) {
            <tr>
                <td>@stock.Product.Name</td>
                <td>@stock.Quantity</td>
            </tr>
        }
    </table>
    
    <hr/>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="back-btn" />
        <a class="save-btn" asp-action="Index">Back</a>        
    </form>
</div>
