@model StockPulse.Models.Customer

@{
    ViewData["Title"] = "Delete customer";
}

<h3 class="mt-5">Are you sure you want to delete this customer?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Person.FullName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Person.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Person.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Person.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Person.Pronouns)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Person.Pronouns)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Person.PhoneNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Person.PhoneNumber)
        </dd>
        @if (Model.City != null)
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.City)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.City)
            </dd>            
        }
        @if (Model.Street != null) 
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Street)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Street)
            </dd>
        }
        @if (Model.ZipCode != null) 
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.ZipCode)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.ZipCode)
            </dd>
        }
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PersonEmail" />
        <input type="submit" value="Delete" class="back-btn" id="save-btn-but-red" />
        <a class="save-btn" asp-action="Index">Back</a>  
    </form>
</div>
