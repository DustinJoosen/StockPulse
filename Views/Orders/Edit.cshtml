@model StockPulse.Models.Order

@{
    ViewData["Title"] = "Edit Order";
}

<h3 class="mt-5">Edit order</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderNum" />
            <div class="form-group mb-2">
                <label asp-for="OrderNum" class="control-label"></label>
                <input disabled="disabled" asp-for="OrderNum" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="CustomerEmail" class="control-label"></label>
                <select asp-for="CustomerEmail" class ="form-control" asp-items="ViewBag.CustomerEmail"></select>
            </div>
            <div class="form-group mb-2">
                <label asp-for="DiscountPrice" class="control-label"></label>
                <input asp-for="DiscountPrice" class="form-control" />
                <span asp-validation-for="DiscountPrice" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="DeliveryNotes" class="control-label"></label>
                <textarea asp-for="DeliveryNotes" class="form-control"></textarea>
                <span asp-validation-for="DeliveryNotes" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <input type="submit" value="Save" class="save-btn" />
                <a class="back-btn" asp-action="Index">Back</a> 
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
